<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title }}</title>
    <style>
      :root {
        --bg: #eff1ed;
        --ink: #373d20;
        --accent: #373d20;
        --muted: #717744;
        --card: #eff1ed;
        --border: #bcbd8b;
        --warm: #766153;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
        background: var(--bg);
        color: var(--ink);
      }
      header {
        border-bottom: 1px solid var(--border);
        padding: 14px 20px;
        background: var(--card);
      }
      main {
        max-width: none;
        margin: 32px 0;
        padding: 0 28px;
      }
      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 8px 24px rgba(70, 63, 58, 0.08);
      }
      .accent { color: var(--accent); }
      .muted { color: var(--muted); }
      a { color: var(--accent); }
      button {
        background: var(--accent);
        color: #f4f3ee;
        border: 1px solid var(--accent);
        padding: 6px 12px;
        border-radius: 8px;
        cursor: pointer;
      }
      button:hover { opacity: 0.9; }
      input, select, textarea {
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 6px 8px;
        font: inherit;
        background: #fff;
        color: var(--ink);
      }
    </style>
  </head>
  <body>
    <header>
      <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; flex-wrap: wrap;">
        <div style="display: flex; align-items: baseline; gap: 10px;">
          <strong>EchoTree</strong>
          {% if app_commit %}
            <span class="muted" style="font-size: 12px;">({{ app_commit }})</span>
          {% endif %}
          <span class="muted">/ {{ title }}</span>
        </div>
        <nav>
          <a href="{{ base_path ~ '/' }}">Home</a>
          <span class="muted" style="margin: 0 6px;">·</span>
          <a href="{{ base_path }}/feeds">Feeds</a>
          <span class="muted" style="margin: 0 6px;">·</span>
          <a href="{{ base_path }}/articles">Articles</a>
          <span class="muted" style="margin: 0 6px;">·</span>
          <a href="{{ base_path }}/share">Share</a>
          <span class="muted" style="margin: 0 6px;">·</span>
          <a href="{{ base_path }}/scheduled">Scheduled</a>
          <span class="muted" style="margin: 0 6px;">·</span>
          <a href="{{ base_path }}/accounts">Accounts</a>
          <span class="muted" style="margin: 0 6px;">·</span>
          <a href="{{ base_path }}/logout">Logout</a>
        </nav>
      </div>
    </header>
    <main>
      {% block content %}{% endblock %}
    </main>
  </body>
</html>
