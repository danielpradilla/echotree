{% extends "layout.twig" %}

{% block content %}
  <div class="card">
    <div style="display: flex; justify-content: flex-end; align-items: center;">
      <a href="{{ base_path }}/accounts/new">Add account</a>
    </div>

    {% if accounts|length == 0 %}
      <p class="muted">No accounts yet.</p>
    {% else %}
      <table style="width: 100%; border-collapse: collapse; margin-top: 16px;">
        <thead>
          <tr>
            <th style="text-align: left; padding: 8px 4px;">Platform</th>
            <th style="text-align: left; padding: 8px 4px;">Name</th>
            <th style="text-align: left; padding: 8px 4px;">Handle</th>
            <th style="text-align: left; padding: 8px 4px;">Active</th>
            <th style="text-align: left; padding: 8px 4px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for account in accounts %}
            <tr>
              <td style="padding: 8px 4px;">{{ account.platform }}</td>
              <td style="padding: 8px 4px;">{{ account.display_name }}</td>
              <td style="padding: 8px 4px;">{{ account.handle }}</td>
              <td style="padding: 8px 4px;">{{ account.is_active ? 'Yes' : 'No' }}</td>
              <td style="padding: 8px 4px;">
                <a href="{{ base_path }}/accounts/{{ account.id }}/edit">Edit</a>
                <form method="post" action="{{ base_path }}/accounts/{{ account.id }}/toggle" style="display: inline; margin-left: 6px;">
                  <input type="hidden" name="_csrf" value="{{ csrf }}" />
                  <button type="submit">{{ account.is_active ? 'Disable' : 'Enable' }}</button>
                </form>
                <form method="post" action="{{ base_path }}/accounts/{{ account.id }}/delete" style="display: inline; margin-left: 6px;">
                  <input type="hidden" name="_csrf" value="{{ csrf }}" />
                  <button type="submit">Delete</button>
                </form>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% endif %}

    <hr style="margin: 16px 0; border: 0; border-top: 1px solid #eadfce;" />
    <div>
      <p class="muted">Connect an account:</p>
      <div style="display: flex; flex-wrap: wrap; gap: 8px;">
        <a href="{{ base_path }}/oauth/mastodon/start">Connect Mastodon</a>
        <a href="{{ base_path }}/oauth/x/start">Connect X</a>
        <a href="{{ base_path }}/oauth/linkedin/start">Connect LinkedIn</a>
        <a href="{{ base_path }}/oauth/bluesky">Connect Bluesky</a>
      </div>
      <p class="muted" style="margin-top: 8px;">
        Callback URL: {{ oauth_callback }}
      </p>
    </div>
  </div>
{% endblock %}
